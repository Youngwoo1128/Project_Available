<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".DescriptionRegardingAvailableActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/description_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_toolbar"
        android:text="안녕하십니까."/>

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available을 이용해주셔서 진심으로 감사드립니다."
        android:layout_below="@+id/firstLine"/>

    <TextView
        android:id="@+id/thirdLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아직 Available ver1.0은 개발 단계이고 미숙한 점도 많습니다."
        android:layout_below="@+id/secondLine"/>

    <TextView
        android:id="@+id/fourthLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="혼자서 개발중인지라 업데이트가 늦어질 수 있으나 꾸준한 노력으로"
        android:layout_below="@id/thirdLine"/>

    <TextView
        android:id="@+id/fifthLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보다 나은 Available이 되도록 노력하겠습니다."
        android:layout_below="@+id/fourthLine"/>

    <TextView
        android:id="@+id/sixthLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="감사합니다."
        android:layout_below="@+id/fifthLine"/>


    <TextView
        android:id="@+id/seventhLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/sixthLine"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mapicon16"
        android:layout_below="@+id/sixthLine"
        android:layout_toLeftOf="@+id/seventhLine"
        android:padding="4dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate into English"
        android:textAllCaps="false"
        android:layout_below="@id/seventhLine"
        android:onClick="clickFor"
        android:layout_alignParentRight="true"
        android:textSize="12sp"/>

</RelativeLayout>